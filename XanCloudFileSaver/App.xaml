<Application x:Class="XanCloudFileSaver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Resources/Settings.xaml" />
                 <ResourceDictionary Source="Resources/BrowseFiles.xaml" />
             </ResourceDictionary.MergedDictionaries>
             <Style x:Key="PageBackground" TargetType="Panel">
                 <Setter Property="Background" Value="#262626" />
             </Style>
             <Style x:Key="HeaderStyle" TargetType="TextBlock">
                 <Setter Property="FontSize" Value="40" />
                 <Setter Property="Padding" Value="20" />
                 <Setter Property="Foreground" Value="#a6a6a6" />
             </Style>
             
             <Style x:Key="StyledButton" TargetType="Button">
                 <Setter Property="Margin" Value="35 40 30 0" />
                 <Setter Property="Padding" Value="10" />
                 <Setter Property="Background" Value="#424242" />
                 <Setter Property="FontSize" Value="25" />
                 <Setter Property="Foreground" Value="#a6a6a6" />
             </Style>
         </ResourceDictionary>
    </Application.Resources>
</Application>
